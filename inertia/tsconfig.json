    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsxImportSource": "vue",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.vue"]
}
